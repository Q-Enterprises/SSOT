{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://q-enterprises.dev/schemas/manifest.schema.json",
  "title": "SSOT Manifest Schema",
  "description": "Schema for SSOT capsule manifests",
  "type": "object",
  "required": ["manifest_id", "capsule", "version", "payload"],
  "properties": {
    "manifest_id": {
      "type": "string",
      "description": "Unique identifier for the manifest",
      "pattern": "^[a-zA-Z0-9._-]+$"
    },
    "capsule": {
      "type": "string",
      "description": "Capsule identifier",
      "pattern": "^[a-zA-Z0-9._-]+$"
    },
    "version": {
      "type": "integer",
      "description": "Manifest version number",
      "minimum": 1
    },
    "payload": {
      "type": "object",
      "description": "Manifest payload containing operations and metadata",
      "required": ["owner", "operations"],
      "properties": {
        "owner": {
          "type": "string",
          "description": "Owner of the capsule"
        },
        "operations": {
          "type": "array",
          "description": "List of operations",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["render", "link", "registry", "invoke", "deploy"]
              },
              "target": {
                "type": "string"
              },
              "ref": {
                "type": "string"
              }
            }
          }
        },
        "modules": {
          "type": "array",
          "description": "List of module references",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._-]+$"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
